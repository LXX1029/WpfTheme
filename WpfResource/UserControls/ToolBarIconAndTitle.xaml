<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfThemes.UserControls"
             xmlns:Controls="clr-namespace:WpfThemes.Controls" x:Class="WpfThemes.UserControls.ToolBarIconAndTitle"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Source="{Binding ImagePath}" Stretch="Fill" Width="20" Height="20"></Image>
            <TextBlock Grid.Column="1" Text="{Binding ToolBarTitle}" Style="{DynamicResource AccentTextBlock15}" />
        </Grid>
    </Grid>
</UserControl>
