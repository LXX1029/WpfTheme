<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WpfThemes;component/OfficeThemeStyles/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="BaseTextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="SnapsToDevicePixels" Value="True"></Setter>

        <Setter Property="Foreground" Value="{DynamicResource TextBlock.Static.ForegroundColor}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontWeight" Value="Normal"></Setter>
        <Setter Property="FontFamily" Value="微软雅黑"></Setter>
        <Setter Property="TextAlignment" Value="Left"></Setter>
    </Style>

    <!--<Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlock}">
